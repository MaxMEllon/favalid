{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "downlevelIteration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "build"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ],
}