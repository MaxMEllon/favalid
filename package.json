{
  "name": "favalid",
  "description": "validator framework",
  "version": "0.5.0",
  "main": "lib/main.js",
  "repository": "akito0107/favalid",
  "author": {
    "name": "Akito Ito",
    "email": "akito0107@gmail.com"
  },
  "license": "apache-2.0",
  "scripts": {
    "test": "jest ./src",
    "test:watch": "jest --watch ./src",
    "test:cover": "jest --coverage ./src",
    "lint": "tslint ./src/**/*.ts",
    "lint:fix": "tslint --fix",
    "clean": "rimraf ./lib/*",
    "tsc": "yarn clean && tsc --outDir lib",
    "docs": "esdoc"
  },
  "dependencies": {
    "@types/power-assert": "^1.5.0",
    "locale-id": "^1.0.2",
    "locale2": "^2.2.0",
    "ramda": "^0.25.0"
  },
  "devDependencies": {
    "@types/jest": "^23.3.0",
    "@types/ramda": "^0.25.35",
    "esdoc": "^1.1.0",
    "esdoc-importpath-plugin": "^1.0.2",
    "esdoc-standard-plugin": "^1.0.0",
    "esdoc-typescript-plugin": "^1.0.1",
    "jest": "^22.4.0",
    "power-assert": "^1.4.4",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfigFile": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "helper.ts"
    ]
  }
}
