{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "downlevelIteration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "../lib/esm",
    "declaration": true
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "../node_modules",
    "../**/*.test.ts"
  ]
}
